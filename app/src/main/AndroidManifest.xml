<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.melkir.googlesamplesdemo">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- main activity -->
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- child of the main activity for barcode reader -->
        <activity
            android:name="com.melkir.vision.barcodereader.BarcodeReaderActivity"
            android:label="Barcode reader" />
        <activity
            android:name="com.melkir.vision.barcodereader.BarcodeCaptureActivity"
            android:label="Read Barcode"
            android:parentActivityName="com.melkir.vision.barcodereader.BarcodeReaderActivity" />

        <!-- child of the main activity for face tracker -->
        <activity
            android:name="com.melkir.vision.facetracker.FaceTrackerActivity"
            android:label="Face Tracker"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="fullSensor" />

        <!-- child of the main activity for googly eyes -->
        <activity
            android:name="com.melkir.vision.googlyeyes.GooglyEyesActivity"
            android:label="Googly Eyes"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="fullSensor" />

        <!-- child of the main activity for accelerometer play -->
        <activity
            android:name="com.melkir.accelerometerplay.AccelerometerPlayActivity"
            android:label="Accelerometer Play"
            android:parentActivityName=".MainActivity" />

        <!-- child of the main activity for our streets -->
        <activity
            android:name="com.melkir.ourstreets.activity.OurStreetsActivity"
            android:label="Our Streets"
            android:parentActivityName=".MainActivity"
            android:theme="@style/OurStreets" />
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="@string/google_maps_key" />

        <!-- child of the main activity for material design codelab -->
        <activity
            android:name="com.melkir.materialdesigncodelab.MaterialDesignActivity"
            android:label="Material Design Codelab"
            android:theme="@style/MaterialAppTheme" />
        <activity
            android:name="com.melkir.materialdesigncodelab.DetailActivity"
            android:parentActivityName="com.melkir.materialdesigncodelab.MaterialDesignActivity"
            android:theme="@style/MaterialAppTheme.Base" />

        <!-- child of the main activity for text to speech activity -->
        <activity
            android:name="com.melkir.texttospeech.TextToSpeechActivity"
            android:label="Text to Speech"
            android:parentActivityName=".MainActivity" />

    </application>

</manifest>